      "delete": {
        "tags": ["Stores"],
        "summary": "Delete store by ID",
        "description": "Deletes a single store.",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the store to delete",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Store deleted successfully."
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Store not found"
          }
        }
      }
